<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="false"
    android:id="@+id/login_activity_scrollview">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">


        <ImageView
            android:src="@drawable/logo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="16dip"
            android:layout_marginBottom="12dp"
            android:hint="@string/usernamehint"
            android:focusable="true"
            android:textCursorDrawable="@null"/>


        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="16dip"
            android:layout_marginBottom="12dp"
            android:hint="@string/passwordhint"
            android:inputType="textPassword"
            android:focusable="true"
            android:textCursorDrawable="@null"/>



        <RadioGroup
            android:id="@+id/login_activity_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/login_activity_radiobutton_kiuer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kiuer"
                />
            <RadioButton
                android:id="@+id/login_activity_radiobutton_helper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/helper"
                android:layout_marginLeft="24dp"
                />
        </RadioGroup>


        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/loginBtn"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"
            android:id="@+id/loginBtn"
            android:textColor="@color/textIconColor"
            android:onClick="loginBtnClicked" />

        <android.support.v7.widget.AppCompatCheckBox
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:textSize="16dip"
            android:id="@+id/checkbox_text"
            android:text="@string/checkbox_text"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <TextView
                android:id="@+id/notfocussable_link_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textSize="16dip"
                android:text="@string/login"
                android:textColor="@color/primaryTextColor"/>
            <TextView
                android:id="@+id/link_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="12dp"
                android:textIsSelectable="true"
                android:textSize="16dip"
                android:gravity="center"
                android:text="@string/link_login"
                android:onClick="signupClicked"
                android:textColor="@color/accentColor"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>