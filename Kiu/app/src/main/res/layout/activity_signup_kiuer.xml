<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- The ActionBar displayed at the top -->
        <include
            layout="@layout/toolbar"
            android:id="@+id/activity_signup_kiuer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/activity_signup_kiuer_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accentColor"
            android:elevation="4dp"
            android:paddingBottom="24dp"
            android:layout_marginTop="65dp">

            <ImageButton
                android:id="@+id/activity_signup_kiuer_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_account_circle_white_24dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/profile_image_circular"
                android:elevation="5dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_signup_kiuer_main_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/activity_signup_kiuer_favorite_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="@string/favorite_city"
                android:textColorHint="@color/textIconColor"
                android:inputType="text"/>

            <EditText
                android:id="@+id/activity_signup_kiuer_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="@string/email"
                android:textColorHint="@color/textIconColor"
                android:inputType="textWebEmailAddress"/>

            <EditText
                android:id="@+id/activity_signup_kiuer_username"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:textColor="@color/textIconColor"
                android:hint="@string/username"
                android:textColorHint="@color/textIconColor"
                android:background="@color/darkPrimaryColor"
                android:inputType="textEmailSubject"/>

            <EditText
                android:id="@+id/activity_signup_kiuer_password"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="@string/passwordhint"
                android:textColorHint="@color/textIconColor"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/activity_signup_kiuer_confpassword"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="@string/confirm_password"
                android:textColorHint="@color/textIconColor"
                android:inputType="textPassword"/>

            <Button
                android:id="@+id/activity_signup_kiuer_ok_button"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="end"
                android:textColor="#fff"
                android:text="Ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>