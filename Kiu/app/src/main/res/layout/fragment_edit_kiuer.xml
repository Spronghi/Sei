<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!-- The ActionBar displayed at the top -->
        <include
            layout="@layout/toolbar"
            android:id="@+id/fragment_edit_kiuer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/fragment_edit_kiuer_profile_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/darkPrimaryColor"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:id="@+id/fragment_edit_kiuer_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/fragment_edit_kiuer_profile_image"
            android:src="@mipmap/ic_face_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_image_circular"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:id="@+id/fragment_edit_kiuer_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_edit_kiuer_profile_image"
            android:background="@color/accentColor"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <EditText
                android:id="@+id/fragment_edit_kiuer_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:background="@android:color/transparent"
                android:text="@string/helper"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fragment_edit_kiuer_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fragment_edit_kiuer_username"
                android:background="@android:color/transparent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/profile_status"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_edit_kiuer_main_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/fragment_edit_kiuer_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="@string/name" />

            <EditText
                android:id="@+id/fragment_edit_kiuer_surname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="@string/surname" />

            <EditText
                android:id="@+id/fragment_edit_kiuer_birth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="@string/birth" />

            <EditText
                android:id="@+id/fragment_edit_kiuer_telephone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="@string/telephone" />

            <EditText
                android:id="@+id/fragment_edit_kiuer_favorite_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="@string/favorite_city" />

            <Button
                android:id="@+id/fragment_edit_kiuer_ok_button"
                android:layout_margin="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="3dp"
                android:textColor="#fff"
                android:text="Ok"
                android:background="@color/accentColor"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>