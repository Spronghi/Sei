<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/activity_first_execute_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accentColor"
            android:elevation="4dp"
            android:padding="24dp">

            <TextView
                android:id="@+id/activity_first_execute_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/first_execute_text"
                android:textColor="#fff" />
            
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_first_execute_main_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <EditText
                android:id="@+id/activity_first_execute_ip_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/darkPrimaryColor"
                android:textColor="#fff"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp"
                android:hint="@string/ip_address"
                android:textColorHint="@color/textIconColor"
                android:inputType="text"/>
            <Button
                android:id="@+id/activity_first_execute_ok_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="setOkButton"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_gravity="end"
                android:textColor="#fff"
                android:text="@string/ok"/>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>